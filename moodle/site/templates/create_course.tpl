<form method="POST" name="info">
<table class = "table table-striped">
	<tr>
	<th>Course Number</th>
	<td><input type="textarea" name="course_number" 
		style="width :300px; height 100px;" autocomplete="off" /></td>
	</tr>
	<tr>
	<th>Course Name</th>
	<td><input type="textarea" name="course_name" 
		style="width :300px; height 100px;" autocomplete="off" /></td>
	</tr>
	<tr>
	<th>Course Description</th>
	<td><textarea name="description" rows="10" cols="100" style="width: 300px; height: 150px;" wrap="hard" autocomplete="off"></textarea></td>
	</tr>
	<tr>
		<th>Syllabus</th>
		<td><textarea name="syllabus" rows="10" cols="100" style="width: 300px; height: 150px;" wrap="hard"autocomplete="off"></textarea></td>
		</tr>

</table>
<input type="submit" />
</form>